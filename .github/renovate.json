{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":disableDependencyDashboard"
    ],
    "timezone": "Asia/Tokyo",
    "schedule": ["every day"],
    "packageRules": [
      {
        "matchPackagePatterns": [
          "*"
        ],
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "groupName": "all non-major dependencies",
        "groupSlug": "all-minor-patch"
      }
    ],
    "ignoreDeps": [],
    "assignees": ["i-yuya"],
    "reviewers": ["i-yuya"],
    "baseBranches": ["main"],
    "labels": ["dependencies"],
    "rangeStrategy": "pin",
    "packageManager": "pnpm",
    "pnpmShrinkwrap": true
  }